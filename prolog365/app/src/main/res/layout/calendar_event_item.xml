<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/calendar_event_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/calendar_event_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="event text test"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/calendar_event_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/calendar_event_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="event description test"
        android:textSize="10dp"
        app:layout_constraintLeft_toRightOf="@+id/calendar_event_image"
        app:layout_constraintTop_toBottomOf="@+id/calendar_event_title" />

</androidx.constraintlayout.widget.ConstraintLayout>