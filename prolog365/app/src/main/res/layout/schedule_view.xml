<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="620dp"
    android:layout_gravity="center"
    app:layout_constraintGuide_percent=".8"
    android:orientation="vertical"
    android:background="@drawable/info_phonebook_layout"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/info_phonebook_box"

        >

        <TextView
            android:id="@+id/date_text_schedule_view"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textAlignment="center"
            android:textColor="@color/text_color_dark"
            android:textSize = "12dp"
            android:layout_marginTop="10dp"
            android:text="7월 4일"

            >
        </TextView>

        <EditText
            android:id="@+id/title_text_schedule_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/text_color"
            android:textSize = "20dp"
            android:background="@null"
            style="@style/NoUnderlineEditText"
            android:text="일정 제목"


            >
        </EditText>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/phonebook_recyclerview_schedule_view"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/info_phonebook_box"
        android:layout_margin="20dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/gallery_recyclerview_schedule_view"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:background="@drawable/info_phonebook_box"
        android:layout_margin="20dp"
        />





</LinearLayout>